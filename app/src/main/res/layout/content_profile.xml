<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hevs.y1617.valaisstudygrp2.Profile"
    tools:showIn="@layout/activity_profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:text="@string/lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/textView23"
                android:layout_alignLeft="@+id/textView23"
                android:layout_alignStart="@+id/textView23"
                android:layout_marginTop="20dp" />

            <ImageView
                android:src="@mipmap/ic_profile_icon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="33dp"
                android:id="@+id/textView18"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:text="@string/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:id="@+id/textView17"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/textView18"
                android:layout_toLeftOf="@+id/textView18"
                android:layout_toStartOf="@+id/textView18" />

            <TextView
                android:text="@string/title_activity_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvusername"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/textView17"
                android:layout_alignBottom="@+id/textView17"
                android:layout_toRightOf="@+id/textView18"
                android:layout_toEndOf="@+id/textView18" />

            <TextView
                android:text="@string/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/textView17"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="@string/title_activity_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvfirstname"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/textView23"
                android:layout_alignBottom="@+id/textView23"
                android:layout_alignLeft="@+id/tvusername"
                android:layout_alignStart="@+id/tvusername" />


            <TextView
                android:text="@string/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/textView27"
                android:layout_alignLeft="@+id/textView27"
                android:layout_alignStart="@+id/textView27"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="@string/usertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/textView28"
                android:layout_alignLeft="@+id/textView28"
                android:layout_alignStart="@+id/textView28"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="@string/title_activity_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvort"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/textView28"
                android:layout_alignBottom="@+id/textView28"
                android:layout_alignLeft="@+id/tvlastname"
                android:layout_alignStart="@+id/tvlastname" />

            <TextView
                android:text="@string/title_activity_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvusertype"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/textView32"
                android:layout_alignBottom="@+id/textView32"
                android:layout_alignLeft="@+id/tvort"
                android:layout_alignStart="@+id/tvort" />

            <TextView
                android:text="@string/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvlastname"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_alignBaseline="@+id/textView27"
                android:layout_alignBottom="@+id/textView27"
                android:layout_alignLeft="@+id/tvfirstname"
                android:layout_alignStart="@+id/tvfirstname" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>