<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hevs.y1617.valaisstudygrp2.Rank"
    tools:showIn="@layout/activity_rank">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="@string/yourrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView3"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/customratingbar"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView" />

            <TextView
                android:text="@string/yourscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/punkte"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/punkte"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:id="@+id/textView10"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@mipmap/level4"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/imageTop1"
                android:layout_below="@+id/textView5"
                android:layout_toLeftOf="@+id/punkte"
                android:layout_toStartOf="@+id/punkte"
                android:layout_marginTop="30dp"/>

            <TextView
                android:text="Top 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Top1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_alignLeft="@+id/Top2"
                android:layout_alignStart="@+id/Top2"
                android:layout_alignTop="@+id/imageTop1"
                android:layout_alignBottom="@+id/imageTop1"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:gravity="center" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                app:srcCompat="@mipmap/level3"
                android:id="@+id/imageTop2"
                android:layout_below="@id/imageTop1"
                android:layout_alignLeft="@+id/imageTop1"
                android:layout_alignStart="@+id/imageTop1" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp"
                app:srcCompat="@mipmap/level3"
                android:id="@+id/imageTop3"
                android:layout_below="@id/imageTop2"
                android:layout_alignLeft="@+id/imageTop2"
                android:layout_alignStart="@+id/imageTop2" />

            <TextView
                android:text="@string/top3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/punkte"
                android:layout_alignStart="@+id/punkte"
                android:layout_marginTop="5dp" />

            <TextView
                android:text="Top 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Top2"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_alignLeft="@+id/Top3"
                android:layout_alignStart="@+id/Top3"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_below="@+id/Top1"
                android:layout_alignBottom="@+id/imageTop2" />

            <TextView
                android:text="Top 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Top3"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_below="@+id/Top2"
                android:layout_alignRight="@+id/imageView"
                android:layout_alignEnd="@+id/imageView"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_alignBottom="@+id/imageTop3" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
